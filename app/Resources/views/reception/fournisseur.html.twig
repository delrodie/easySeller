<div class="">
    <div class="page-header-title">
        <h4 class="page-title">Gestion des achats</h4>
    </div>
</div>
<div class="page-content-wrapper ">

    <div class="container">

        <!-- Liste -->
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-primary">
                    <div class="panel-body">
                        <!-- Message -->
                        {% for flash_message in app.session.flashBag.get('notice') %} {% if flash_message %}
                        <div class="row">
                            <div class="col-xs-8 col-xs-offset-2 col-sm-8 col-sm-offset-2">
                                <div class="alert alert-success alert-dismissible fade in">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
                                    <a href="#" class="alert-link">NOTIFICATION :</a> {{ flash_message }}
                                </div>
                            </div>
                        </div>
                        {% endif %} {% endfor %}
                        <!-- \Message -->
                        <h4 class="m-t-0 m-b-30">Liste des fournisseurs</h4>
                        <div class="m-t-20">
                            <table id="datatable-buttons" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th class="text-center">N°</th>
                                        <th class="text-center">Noms</th>
                                        <th class="text-center">Adresses</th>
                                        <th class="text-center">Contacts</th>
                                        <th class="text-center">Montant total</th>
                                        <th class="text-center">Nb achats</th>
                                        <th class="text-center"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% set i = 0 %} {% for fournisseur in fournisseurs %} {% set i = i + 1 %}
                                    <tr>
                                        <td class="text-right">{{ loop.index }}</td>
                                        {{ render(url('info_bon_reception_fournisseur', {'id': fournisseur.id})) }} {{ render(url('statistique_bon_reception_fournisseur', {'id': fournisseur.id})) }}
                                        <td class="text-center">
                                            <a href="{{ path('liste_bon_reception_fournisseur', {'id': fournisseur.id })}}" title="Voir"><i class="glyphicon glyphicon-search"></i></a>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- \Liste -->

    </div>
    <!-- container -->


</div>
<!-- Page content Wrapper -->
