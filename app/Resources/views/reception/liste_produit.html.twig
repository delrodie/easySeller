{% block body %}
<div class="">
  <div class="page-header-title">
      <h4 class="page-title">Liste des produits de l'approvisionnement {{ approvisionnement.numero }}, du fournisseur {{ approvisionnement.fournisseur.code }}-{{ approvisionnement.fournisseur.nom}}</h4>
  </div>
</div>
<div class="page-content-wrapper ">

  <div class="container">

    <div class="row">
      <div class="col-sm-12">
        <div class="panel panel-primary">
          <div class="panel-body">
            <div class="m-t-20">

              <!-- Fournisseur & approvisionnement -->
              <div class="row">
                <div class="col-xs-6">
                  <address>
                    <strong>Fournisseur :</strong><br>
                    {{ approvisionnement.fournisseur }}<br>
                    {{ approvisionnement.fournisseur.adresse }}<br>
                    {{ approvisionnement.fournisseur.contact}}
                  </address>
                </div>
                <div class="col-xs-6 text-right">
                  <address>
                    Facture Fournisseur: <strong>{{ approvisionnement.facture }}</strong>
                  </address>
                  <address>
                    Date facturaction: {{ approvisionnement.datefac }}<br>
                  </address>
                  <address>
                    Numero: <strong>{{ approvisionnement.numero}}</strong><br>
                  </address>
                  <address>
                    Date: {{ approvisionnement.publieLe|date('d/m/Y h:i:s')}}
                  </address>
                </div>
              </div>
              <!-- \Fournisseur -->
              <!-- Liste des produits -->
              <div class="row">
                <div class="col-md-12">
                  <div class="panel panel-default">
                    <div class="panel-body">
                      <div class="table-responsive">
                        <table class="table">
                          <thead>
                            <tr>
                              <th class="text-center">NÂ°</th>
                              <th class="text-center">Categories</th>
                              <th class="text-center">Produits</th>
                              <th class="text-center">Models</th>
                              <th class="text-center">PR.Unit</th>
                              <th class="text-center">PV.Unit</th>
                              <th class="text-center">B.Unit</th>
                              <th class="text-center">Qte</th>
                              <th class="text-center">PR.Tot</th>
                              <th class="text-center">B.Tot</th>
                            </tr>
                          </thead>
                          <tbody>
                            {% set montantFac = 0 %}
                            {% set paArticle = 0 %}
                            {% set fret = 0 %}
                            {% set prixRevient = 0 %}
                            {% set prixVente = 0 %}
                            {% set benefice = 0 %}
                            {% set prixRevientTotaux = 0 %}
                            {% set beneficeTotaux = 0 %}
                            {% set pvUnit = 0 %}

                            {% for produit in approvisionner.stock.produit %}
                                {% set montantFac = approvisionnement.montant %}
                                {% set paArticle = produit.pa %}
                                {% set fret = approvisionnement.fret %}
                                {% set prixRevient = approvisionnement.montant|prixrevient(paArticle,fret) %}
                                {% set benefice = prixRevient|benefice(produit.pv,produit.qte) %}
                                {% set prixVente = produit.pv * produit.qte %}
                                {% set pvUnit = prixRevient / produit.qte %}
                                <tr>
                                  <td class="text-right">{{ loop.index }}</td>
                                  <td class="print">{{ render(url('stockage_categorie', {'code': produit.code })) }} </td>
                                  <td class="text-left print">&nbsp; {{ produit.code }} - {{ produit.nom }}</td>
                                  <td class="text-left print">&nbsp; {{ produit.model }}</td>
                                  <td class="text-right monnaie print">{{ pvUnit|round|monnaie }}</td>
                                  <td class="text-right monnaie print">{{ produit.pv|monnaie }}</td>
                                  <td class="text-right monnaie print">{{ (benefice / produit.qte)|round|monnaie }}</td>
                                  <td class="text-center print">{{ produit.qte }}</td>
                                  <td class="text-center monnaie print">{{ prixRevient|monnaie }}</td>
                                  <td class="text-center monnaie print">{{ benefice|monnaie }}</td>
                                </tr>
                                {% set prixRevientTotaux = prixRevientTotaux + prixRevient %}
                                {% set beneficeTotaux = beneficeTotaux + benefice %}
                            {% endfor %}
                                <tr>
                                  <td class="thick-line text-right" colspan="8">Totaux prix de revient</td>
                                  <td class="thick-line text-right" colspan="2"><strong>{{ (montantFac + fret)|monnaie}}</strong> FCFA</td>
                                </tr>
                                <tr>
                                  <td class="no-line text-right" colspan="8">Totaux benefices</td>
                                  <td class="no-line text-right" colspan="2"><strong>{{ beneficeTotaux|monnaie}}</strong> FCFA</td>
                                </tr>
                          </tbody>
                        </table><br>
                        <div class="hidden-print">
                          <div class="pull-right">
                            <a href="javascript:window.print()" class="btn btn-success waves-effect waves-light"><i class="fa fa-print"></i></a>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <!-- \Liste des produits -->
            </div>
          </div>
        </div>
      </div>
    </div>


  </div><!-- container -->


</div> <!-- Page content Wrapper -->
{% endblock %}

