{% block body %}
<div class="">
  <div class="page-header-title">
      <h4 class="page-title">Gestion des approvisionnements</h4>
  </div>
</div>
<div class="page-content-wrapper ">

  <div class="container">

      <!-- Enregistrement -->
      <div class="row">
        <div class="col-sm-12">
          <div class="panel panel-primary">
            <div class="panel-body">
              <div class="m-t-20">

                <div class="row">
                  <!-- Message -->
                  {% for flash_message in app.session.flashBag.get('notice') %}
                    {% if flash_message %}
                    <div class="row">
                      <div class="col-xs-8 col-xs-offset-2 col-sm-10 col-sm-offset-1">
                        <div class="alert alert-success alert-dismissible fade in">
                          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
                          <a href="#" class="alert-link">NOTIFICATION :</a> {{ flash_message }}
                        </div>
                      </div>
                    </div>
                    {% endif %}
                  {% endfor %}
                  <!-- \Message -->
                  <div class="col-sm-3 col-sm-offset-1">
                    <div class="form-group">
                      <label class="control-label">
                        Fournisseur<span class="required">  </span>
                      </label>
                      <input type="text" class="form-control" value="{{ approvisionnement.fournisseur }}" readonly="readonly"/>
                    </div>
                  </div>
                  <div class="col-sm-3 col-sm-offset-1">
                    <div class="form-group">
                      <label class="control-label">
                        Numero facture<span class="required">  </span>
                      </label>
                      <input type="text" class="form-control" value="{{ approvisionnement.facture }}" readonly="readonly"/>
                    </div>
                  </div>
                  <div class="col-sm-2 col-sm-offset-1">
                    <div class="form-group">
                      <label class="control-label">
                        Date facture<span class="required">  </span>
                      </label>
                      <div class="input-group">
                        <input type="text" class="form-control" value="{{ approvisionnement.datefac }}" readonly="readonly"/>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-3 col-sm-offset-1">
                    <div class="form-group">
                      <label class="control-label">
                        Montant<span class="required">  </span>
                      </label>
                      <input type="text" class="form-control" value="{{ approvisionnement.montant }}" readonly="readonly"/>
                    </div>
                  </div>
                  <div class="col-sm-3 col-sm-offset-1">
                    <div class="form-group">
                      <label class="control-label">
                        Fret<span class="required">  </span>
                      </label>
                      <input type="text" class="form-control" value="{{ approvisionnement.fret }}" readonly="readonly"/>
                    </div>
                  </div>
                  <div class="col-sm-3 col-sm-offset-1">
                    <div class="form-group">
                      <label class="control-label">
                        Numero approvisionnement<span class="required">  </span>
                      </label>
                      <input type="text" class="form-control" value="{{ approvisionnement.numero }}" readonly="readonly"/>
                    </div>
                  </div>
                </div>
                <br>
                <div class="row">
                  <div class="col-sm-6 col-sm-offset-6">
                    <div class="form-group">

                      {{ form_start(delete_form) }}
                          <a href="#">
                            <button type="button" class="btn btn-primary waves-effect waves-light">Ajouter les produits</button>
                          </a>
                          <a href="{{ path('approvisionnement_edit', {'slug': approvisionnement.slug} )}}">
                            <button type="button" class="btn btn-default waves-effect waves-light">Modifier</button>
                          </a>
                          <button type="submit" class="btn btn-danger waves-effect m-l-5">Supprimer</button>
                      {{ form_end(delete_form) }}
                    </div>
                  </div>
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- \Enregistrement -->


  </div><!-- container -->


</div> <!-- Page content Wrapper -->
{% endblock %}

