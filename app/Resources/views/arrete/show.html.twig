{% extends 'base.html.twig' %}

{% block title %}Arrêté de caisse de {{ arrete.caissiere}} du {{ arrete.publieLe|date('d-m-Y') }}{% endblock %}

{% block body %}

    <div class="page-header-title">
      <h4 class="page-title">Arrêté de caisse de {{ arrete.caissiere}} du {{ arrete.publieLe|date('d-m-Y') }}</h4>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-primary">
          <div class="panel-body">
            <div class="row" style="padding-bottom: 25px">
              <div class="col-sm-7 text-center">
                <h4>Arrêté de caisse du {{ arrete.publieLe|date('d-m-Y') }} </h4>
              </div>
              <div class="col-sm-5 text-right">
                <h4>Caisse: {{ arrete.caissiere|title}}</h4>
              </div>
            </div>
            <table id="datatable-buttons" class="table table-striped table-bordered">
              <tr>
                <th></th>
                <th class="text-center">Matins</th>
                <th class="text-center">Soirs</th>
                <th class="text-center">Totaux</th>
                <th class="text-center">Recettes</th>
              </tr>
              <tr>
                <th class="text-right">10.000 &nbsp; &nbsp;</th>
                <td class="text-center">{{ arrete.dixmilleMat }}</td>
                <td class="text-center">{{ arrete.dixmilleSoir }}</td>
                <td class="text-right">{{ ((arrete.dixmilleMat + arrete.dixmilleSoir) * 10000)|monnaie }} &nbsp; &nbsp;</td>
                <td class="text-right">{{ ((arrete.dixmilleSoir - arrete.dixmilleMat) * 10000)|monnaie }} &nbsp; &nbsp;</td>
              </tr>
              <tr>
                <th class="text-right">5.000 &nbsp; &nbsp;</th>
                <td class="text-center">{{ arrete.cinqmilleMat }}</td>
                <td class="text-center">{{ arrete.cinqmilleSoir }}</td>
                <td class="text-right">{{ ((arrete.cinqmilleMat + arrete.cinqmilleSoir) * 5000)|monnaie }} &nbsp; &nbsp;</td>
                <td class="text-right">{{ ((arrete.cinqmilleSoir - arrete.cinqmilleMat) * 5000)|monnaie }} &nbsp; &nbsp;</td>
              </tr>
              <tr>
                <th class="text-right">2.000 &nbsp; &nbsp;</th>
                <td class="text-center">{{ arrete.deuxmilleMat }}</td>
                <td class="text-center">{{ arrete.deuxmilleSoir }}</td>
                <td class="text-right">{{ ((arrete.deuxmilleMat + arrete.deuxmilleSoir) * 2000)|monnaie }} &nbsp; &nbsp;</td>
                <td class="text-right">{{ ((arrete.deuxmilleSoir - arrete.deuxmilleMat) * 2000)|monnaie }} &nbsp; &nbsp;</td>
              </tr>
              <tr>
                <th class="text-right">1.000 &nbsp; &nbsp;</th>
                <td class="text-center">{{ arrete.milleMat }}</td>
                <td class="text-center">{{ arrete.milleSoir }}</td>
                <td class="text-right">{{ ((arrete.milleMat + arrete.milleSoir) * 1000)|monnaie }} &nbsp; &nbsp;</td>
                <td class="text-right">{{ ((arrete.milleSoir - arrete.milleMat) * 1000)|monnaie }} &nbsp; &nbsp;</td>
              </tr>
              <tr>
                <th class="text-right">500 &nbsp; &nbsp;</th>
                <td class="text-center">{{ arrete.cinqcentMat }}</td>
                <td class="text-center">{{ arrete.cinqcentSoir }}</td>
                <td class="text-right">{{ ((arrete.cinqcentMat + arrete.cinqcentSoir) * 500)|monnaie }} &nbsp; &nbsp;</td>
                <td class="text-right">{{ ((arrete.cinqcentSoir - arrete.cinqcentMat) * 500)|monnaie }} &nbsp; &nbsp;</td>
              </tr>
              <tr>
                <th class="text-right">200 &nbsp; &nbsp;</th>
                <td class="text-center">{{ arrete.deuxcentMat }}</td>
                <td class="text-center">{{ arrete.deuxcentSoir }}</td>
                <td class="text-right">{{ ((arrete.deuxcentMat + arrete.deuxcentSoir) * 200)|monnaie }} &nbsp; &nbsp;</td>
                <td class="text-right">{{ ((arrete.deuxcentSoir - arrete.deuxcentMat) * 200)|monnaie }} &nbsp; &nbsp;</td>
              </tr>
              <tr>
                <th class="text-right">100 &nbsp; &nbsp;</th>
                <td class="text-center">{{ arrete.centMat }}</td>
                <td class="text-center">{{ arrete.centSoir }}</td>
                <td class="text-right">{{ ((arrete.centMat + arrete.centSoir) * 100)|monnaie }} &nbsp; &nbsp;</td>
                <td class="text-right">{{ ((arrete.centSoir - arrete.centMat) * 100)|monnaie }} &nbsp; &nbsp;</td>
              </tr>
              <tr>
                <th class="text-right">50 &nbsp; &nbsp;</th>
                <td class="text-center">{{ arrete.cinquanteMat }}</td>
                <td class="text-center">{{ arrete.cinquanteSoir }}</td>
                <td class="text-right">{{ ((arrete.cinquanteMat + arrete.cinquanteSoir) * 50)|monnaie }} &nbsp; &nbsp;</td>
                <td class="text-right">{{ ((arrete.cinquanteSoir - arrete.cinquanteMat) * 50)|monnaie }} &nbsp; &nbsp;</td>
              </tr>
              <tr>
                <th class="text-right">25 &nbsp; &nbsp;</th>
                <td class="text-center">{{ arrete.vingtcinqMat }}</td>
                <td class="text-center">{{ arrete.vingtcinqSoir }}</td>
                <td class="text-right">{{ ((arrete.vingtcinqMat + arrete.vingtcinqSoir) * 25)|monnaie }} &nbsp; &nbsp;</td>
                <td class="text-right">{{ ((arrete.vingtcinqSoir - arrete.vingtcinqMat) * 25)|monnaie }} &nbsp; &nbsp;</td>
              </tr>
              <tr>
                <th class="text-right">10 &nbsp; &nbsp;</th>
                <td class="text-center">{{ arrete.dixMat }}</td>
                <td class="text-center">{{ arrete.dixSoir }}</td>
                <td class="text-right">{{ ((arrete.dixMat + arrete.dixSoir) * 10)|monnaie }} &nbsp; &nbsp;</td>
                <td class="text-right">{{ ((arrete.dixSoir - arrete.dixMat) * 10)|monnaie }} &nbsp; &nbsp;</td>
              </tr>
              <tr>
                <th class="text-center">TOTAUX </th>
                <th class="text-center">{{ arrete.totMat|monnaie }}</th>
                <th class="text-center">{{ arrete.totSoir|monnaie }}</th>
                <th class="text-right">{{ (arrete.totMat + arrete.totSoir)|monnaie }} &nbsp; &nbsp;</th>
                <th class="text-right">{{ (arrete.totSoir - arrete.totMat)|monnaie }} &nbsp; &nbsp;</th>
              </tr>
            </table>
          </div>
        </div>
      </div>
    </div>
{% endblock %}


{% block javascripts %}
  {{ parent() }}

        <script src="{{ asset('ressources/vendor/js/app.js')}}"></script>
{% endblock %}
