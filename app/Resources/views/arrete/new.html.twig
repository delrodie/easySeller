{% extends 'base.html.twig' %}

{% block title %}Enregistrement des utilisateurs{% endblock %}

{% block stylesheets %}
<!--Morris Chart CSS -->
  <link rel="stylesheet" href="{{ asset('ressources/vendor/plugins/chartist/css/chartist.min.css')}}">
  <link href="{{ asset('ressources/vendor/plugins/bootstrap-sweetalert/sweet-alert.css')}}" rel="stylesheet" type="text/css">

  <link href="{{ asset('ressources/vendor/plugins/timepicker/bootstrap-timepicker.min.css')}}" rel="stylesheet">
  <link href="{{ asset('ressources/vendor/plugins/bootstrap-colorpicker/css/bootstrap-colorpicker.min.css')}}" rel="stylesheet">
  <link href="{{ asset('ressources/vendor/plugins/bootstrap-datepicker/css/bootstrap-datepicker.min.css')}}" rel="stylesheet">
  <link href="{{ asset('ressources/vendor/plugins/bootstrap-touchspin/css/jquery.bootstrap-touchspin.min.css')}}" rel="stylesheet" />

  {{ parent() }}
{% endblock %}

{% block body %}

    <div class="content">
      <div class="">
        <div class="page-header-title">
          <h4 class="page-title">Billetage d'ouverture de caisse</h4>
        </div>
      </div>

      <div class="page-content-wrapper">
        <div class="container">
          <div class="row">
            <div class="col-sm-12">
              <div class="panel panel-primary">
                <div class="panel-body">
                  <!-- Bouton -->
                  <div class="row bouton">
                    <div class="col-sm-4 col-sm-offset-8 text-right">

                    </div>
                  </div>
                  <!-- \Bouton -->
                  {{ form_start(form, {'attr': {'class': 'form-horizontal', 'id': 'billetageForm'}}) }}
                  <div class="row">
                    <div class="col-xs-2 col-sm-1 col-xs-offset-1 col-sm-offset-1">
                      <div class="form-group">
                        <label class="control-label">
                          10.000<span class="required"></span>
                        </label>
                        {{ form_widget(form.dixmilleMat) }}
                        {{ form_errors(form.dixmilleMat) }}
                      </div>
                    </div>
                    <div class="col-xs-2 col-sm-1 col-xs-offset-1 col-sm-offset-1">
                      <div class="form-group">
                        <label class="control-label">
                          5.000<span class="required"></span>
                        </label>
                        {{ form_widget(form.cinqmilleMat) }}
                        {{ form_errors(form.cinqmilleMat) }}
                      </div>
                    </div>
                    <div class="col-xs-2 col-sm-1 col-xs-offset-1 col-sm-offset-1">
                      <div class="form-group">
                        <label class="control-label">
                          2.000<span class="required"></span>
                        </label>
                        {{ form_widget(form.deuxmilleMat) }}
                        {{ form_errors(form.deuxmilleMat) }}
                      </div>
                    </div>
                    <div class="col-xs-2 col-sm-1 col-xs-offset-1 col-sm-offset-1">
                      <div class="form-group">
                        <label class="control-label">
                          1.000<span class="required"></span>
                        </label>
                        {{ form_widget(form.milleMat) }}
                        {{ form_errors(form.milleMat) }}
                      </div>
                    </div>
                    <div class="col-xs-2 col-sm-1 col-xs-offset-1 col-sm-offset-1">
                      <div class="form-group">
                        <label class="control-label">
                          500<span class="required"></span>
                        </label>
                        {{ form_widget(form.cinqcentMat) }}
                        {{ form_errors(form.cinqcentMat) }}
                      </div>
                    </div>
                    <div class="col-xs-2 col-sm-1 col-xs-offset-1 col-sm-offset-1">
                      <div class="form-group">
                        <label class="control-label">
                          200<span class="required"></span>
                        </label>
                        {{ form_widget(form.deuxcentMat) }}
                        {{ form_errors(form.deuxcentMat) }}
                      </div>
                    </div>
                    <div class="col-xs-2 col-sm-1 col-xs-offset-1 col-sm-offset-1">
                      <div class="form-group">
                        <label class="control-label">
                          100<span class="required"></span>
                        </label>
                        {{ form_widget(form.centMat) }}
                        {{ form_errors(form.centMat) }}
                      </div>
                    </div>
                    <div class="col-xs-2 col-sm-1 col-xs-offset-1 col-sm-offset-1">
                      <div class="form-group">
                        <label class="control-label">
                          50<span class="required"></span>
                        </label>
                        {{ form_widget(form.cinquanteMat) }}
                        {{ form_errors(form.cinquanteMat) }}
                      </div>
                    </div>
                    <div class="col-xs-2 col-sm-1 col-xs-offset-1 col-sm-offset-1">
                      <div class="form-group">
                        <label class="control-label">
                          25<span class="required"></span>
                        </label>
                        {{ form_widget(form.vingtcinqMat) }}
                        {{ form_errors(form.vingtcinqMat) }}
                      </div>
                    </div>
                    <div class="col-xs-2 col-sm-1 col-xs-offset-1 col-sm-offset-1">
                      <div class="form-group">
                        <label class="control-label">
                          10<span class="required"></span>
                        </label>
                        {{ form_widget(form.dixMat) }}
                        {{ form_errors(form.dixMat) }}
                      </div>
                    </div>
                    <div class="col-xs-2 col-sm-1 col-xs-offset-1 col-sm-offset-1">
                      <div class="form-group">
                        <label class="control-label">
                          5<span class="required"></span>
                        </label>
                        {{ form_widget(form.cinqMat) }}
                        {{ form_errors(form.cinqMat) }}
                      </div>
                    </div>
                    <div class="col-xs-3 col-sm-2 col-xs-offset-1 col-sm-offset-1">
                      <div class="form-group">
                        <label class="control-label">
                          Total<span class="required"></span>
                        </label>
                        {{ form_widget(form.totMat) }}
                        {{ form_errors(form.totMat) }}
                      </div>
                    </div>
                    <div class="col-xs-3 col-sm-3 col-xs-offset-1 col-sm-offset-1">
                      <div class="form-group">
                        <label class="control-label">
                          Caisse<span class="required"></span>
                        </label>
                        {{ form_widget(form.caissiere) }}
                        {{ form_errors(form.caissiere) }}
                      </div>
                    </div>
                  </div>
                  <br>
                  <div class="row">
                    <div class="col-sm-4 col-sm-offset-8">
                      <div class="form-group">
                        <button type="submit" class="btn btn-primary waves-effect waves-light">Enregistrer</button>
                        <button type="reset" class="btn btn-default waves-effect m-l-5">Annuler</button>
                      </div>
                    </div>
                  </div>
                  {{ form_end(form) }}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>


    </div>

{% endblock %}

{% block javascripts %}
  {{ parent() }}

  <!-- Plugins js -->
        <script src="{{ asset('ressources/vendor/plugins/timepicker/bootstrap-timepicker.js')}}"></script>
        <script src="{{ asset('ressources/vendor/plugins/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js')}}"></script>
        <script src="{{ asset('ressources/vendor/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js')}}"></script>

        <!-- Plugins Init js -->
        <script src="{{ asset('ressources/vendor/pages/form-advanced.js')}}"></script>
        <script src="{{ asset('ressources/vendor/plugins/bootstrap-sweetalert/sweet-alert.min.js')}}"></script>
        <script src="{{ asset('ressources/vendor/pages/sweet-alert.init.js')}}"></script>

        <script type="text/javascript" src="{{ asset('ressources/vendor/plugins/parsleyjs/parsley.min.js')}}"></script>

        <script type="text/javascript">
            $(document).ready(function() {
                $('form').parsley();
            });
        </script>

        <script src="{{ asset('ressources/js/billetage.js')}}"></script>
        <script src="{{ asset('ressources/vendor/js/app.js')}}"></script>
{% endblock %}
