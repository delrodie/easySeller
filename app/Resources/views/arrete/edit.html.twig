{% extends 'base.html.twig' %}

{% block body %}

    <div class="page-header-title">
      <h4 class="page-title">Arrêté de caisse de {{ arrete.caissiere}} du {{ arrete.publieLe|date('d-m-Y') }}</h4>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-primary">
          <div class="panel-body">
            <div class="row" style="padding-bottom: 25px">
              <div class="col-sm-7 text-center">
                <h4>Arrêté de caisse du {{ arrete.publieLe|date('d-m-Y') }} </h4>
              </div>
              <div class="col-sm-5 text-right">
                <h4>Caisse: {{ form_widget(edit_form.caissiere) }}</h4>
              </div>
            </div>
            {{ form_start(edit_form, {'attr': {'class': 'form-horizontal', 'id': 'billetageForm'}}) }}
            <div class="row">
              <div class="col-sm-6">
                <table>
                  <tr>
                    <th></th>
                    <th class="text-center">Matins</th>
                    <th class="text-center">Soirs</th>
                  </tr>
                  <tr>
                    <th class="text-right">10.000 &nbsp; &nbsp;</th>
                    <td class="text-center">{{ form_widget(edit_form.dixmilleMat) }}</td>
                    <td class="text-center">{{ form_widget(edit_form.dixmilleSoir) }}</td>
                  </tr>
                  <tr>
                    <th class="text-right">5.000 &nbsp; &nbsp;</th>
                    <td class="text-center">{{ form_widget(edit_form.cinqmilleMat) }}</td>
                    <td class="text-center">{{ form_widget(edit_form.cinqmilleSoir) }}</td>
                  </tr>
                  <tr>
                    <th class="text-right">2.000 &nbsp; &nbsp;</th>
                    <td class="text-center">{{ form_widget(edit_form.deuxmilleMat) }}</td>
                    <td class="text-center">{{ form_widget(edit_form.deuxmilleSoir) }}</td>
                  </tr>
                  <tr>
                    <th class="text-right">1.000 &nbsp; &nbsp;</th>
                    <td class="text-center">{{ form_widget(edit_form.milleMat) }}</td>
                    <td class="text-center">{{ form_widget(edit_form.milleSoir) }}</td>
                  </tr>
                  <tr>
                    <th class="text-right">500 &nbsp; &nbsp;</th>
                    <td class="text-center">{{ form_widget(edit_form.cinqcentMat) }}</td>
                    <td class="text-center">{{ form_widget(edit_form.cinqcentSoir) }}</td>
                  </tr>
                  <tr>
                    <th class="text-right">200 &nbsp; &nbsp;</th>
                    <td class="text-center">{{ form_widget(edit_form.deuxcentMat) }}</td>
                    <td class="text-center">{{ form_widget(edit_form.deuxcentSoir) }}</td>
                  </tr>

                </table>
              </div>
              <div class="col-sm-6 text-center">
                <table>
                  <tr>
                    <th></th>
                    <th class="text-center">Matins</th>
                    <th class="text-center">Soirs</th>
                  </tr>
                  <tr>
                    <th class="text-right">100 &nbsp; &nbsp;</th>
                    <td class="text-center">{{ form_widget(edit_form.centMat) }}</td>
                    <td class="text-center">{{ form_widget(edit_form.centSoir) }}</td>
                  </tr>
                  <tr>
                    <th class="text-right">50 &nbsp; &nbsp;</th>
                    <td class="text-center">{{ form_widget(edit_form.cinquanteMat) }}</td>
                    <td class="text-center">{{ form_widget(edit_form.cinquanteSoir) }}</td>
                  </tr>
                  <tr>
                    <th class="text-right">25 &nbsp; &nbsp;</th>
                    <td class="text-center">{{ form_widget(edit_form.vingtcinqMat) }}</td>
                    <td class="text-center">{{ form_widget(edit_form.vingtcinqSoir) }}</td>
                  </tr>
                  <tr>
                    <th class="text-right">10 &nbsp; &nbsp;</th>
                    <td class="text-center">{{ form_widget(edit_form.dixMat) }}</td>
                    <td class="text-center">{{ form_widget(edit_form.dixSoir) }}</td>
                  </tr>
                  <tr>
                    <th class="text-right">5 &nbsp; &nbsp;</th>
                    <td class="text-center">{{ form_widget(edit_form.cinqMat) }}</td>
                    <td class="text-center">{{ form_widget(edit_form.cinqSoir) }}</td>
                  </tr>
                  <tr>
                    <th class="text-center">TOTAUX </th>
                    <th class="text-center">{{ form_widget(edit_form.totMat) }}</th>
                    <th class="text-center">{{ form_widget(edit_form.totSoir) }}</th>
                  </tr>
                </table>
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col-sm-4 col-sm-offset-8">
                <div class="form-group">
                  <button type="submit" class="btn btn-primary waves-effect waves-light">Enregistrer</button>
                  <button type="reset" class="btn btn-default waves-effect m-l-5">Annuler</button>
                </div>
              </div>
            </div>
            {{ form_end(edit_form) }}
          </div>
        </div>
      </div>
    </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}

  <!-- Plugins js -->
        <script src="{{ asset('ressources/vendor/plugins/timepicker/bootstrap-timepicker.js')}}"></script>
        <script src="{{ asset('ressources/vendor/plugins/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js')}}"></script>
        <script src="{{ asset('ressources/vendor/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js')}}"></script>

        <!-- Plugins Init js -->
        <script src="{{ asset('ressources/vendor/pages/form-advanced.js')}}"></script>
        <script src="{{ asset('ressources/vendor/plugins/bootstrap-sweetalert/sweet-alert.min.js')}}"></script>
        <script src="{{ asset('ressources/vendor/pages/sweet-alert.init.js')}}"></script>

        <script type="text/javascript" src="{{ asset('ressources/vendor/plugins/parsleyjs/parsley.min.js')}}"></script>

        <script type="text/javascript">
            $(document).ready(function() {
                $('form').parsley();
            });
        </script>

        <script src="{{ asset('ressources/js/billetage.js')}}"></script>
        <script src="{{ asset('ressources/vendor/js/app.js')}}"></script>
{% endblock %}
